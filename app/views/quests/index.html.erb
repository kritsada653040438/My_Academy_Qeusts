<div class="w-full max-w-lg mx-auto">
  <div class="relative bg-white shadow-lg rounded-lg p-6 overflow-hidden">
    <div class="text-center">
      <div class="inline-block">
        <h1 class="text-3xl font-bold uppercase text-red-500 mb-2 tracking-tight">
          Pleum
        </h1>
        <p class="text-2xl uppercase tracking-[0.2em] text-red-500 font-medium border-t border-red-300 pt-3">
          Kritsada Mahanam
        </p>
      </div>
    </div>
    <!-- Profile Image - Full Screen Size -->
    <div class="flex justify-center mt-8 relative z-10">
      <div class="relative group w-full max-w-md">
        <!-- Enhanced Glow Effect Background -->
        <div class="absolute inset-0 bg-gradient-to-r from-blue-400 via-purple-500 to-pink-500 rounded-full blur-2xl opacity-40 group-hover:opacity-70 transition-all duration-500 scale-125 animate-pulse"></div>
        <div class="absolute inset-0 bg-gradient-to-r from-pink-300 via-yellow-300 to-blue-300 rounded-full blur-3xl opacity-20 group-hover:opacity-40 transition-all duration-700 scale-150"></div>
        
        <!-- Main Profile Image - Nearly Full Screen -->
        <div class="relative w-72 h-72 sm:w-80 sm:h-80 lg:w-96 lg:h-96 xl:w-[28rem] xl:h-[28rem] mx-auto rounded-full border-8 sm:border-12 lg:border-16 border-white shadow-[0_20px_60px_rgba(0,0,0,0.3)] overflow-hidden bg-white transform group-hover:scale-110 transition-all duration-500 hover:border-yellow-300">
          <%= image_tag "me.png", class: "w-full h-full object-cover group-hover:scale-110 transition-transform duration-700" %>
          
          <!-- Overlay gradient on hover -->
          <div class="absolute inset-0 bg-gradient-to-t from-purple-600/30 via-transparent to-yellow-400/20 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
          
          <!-- Sparkle Effects -->
          <div class="absolute top-8 left-8 text-4xl opacity-0 group-hover:opacity-100 transition-all duration-500 animate-bounce delay-100">✨</div>
          <div class="absolute top-12 right-16 text-3xl opacity-0 group-hover:opacity-100 transition-all duration-700 animate-pulse delay-300">💫</div>
          <div class="absolute bottom-16 left-12 text-3xl opacity-0 group-hover:opacity-100 transition-all duration-600 animate-bounce delay-500">🌟</div>
          <div class="absolute bottom-8 right-8 text-2xl opacity-0 group-hover:opacity-100 transition-all duration-500 animate-pulse delay-700">⭐</div>
        </div>
        
        <!-- Multiple Achievement Rings -->
        <div class="absolute -top-4 -right-4 w-16 h-16 sm:w-20 sm:h-20 bg-gradient-to-r from-yellow-400 to-orange-500 rounded-full flex items-center justify-center text-3xl sm:text-4xl shadow-2xl animate-bounce z-20">
          👑
        </div>
        
        <div class="absolute -bottom-6 -left-6 w-14 h-14 sm:w-16 sm:h-16 bg-gradient-to-r from-green-400 to-blue-500 rounded-full flex items-center justify-center text-2xl sm:text-3xl shadow-2xl animate-pulse z-20">
          🏆
        </div>
        
        <div class="absolute top-8 -left-4 w-12 h-12 sm:w-14 sm:h-14 bg-gradient-to-r from-pink-400 to-purple-500 rounded-full flex items-center justify-center text-xl sm:text-2xl shadow-2xl animate-bounce delay-1000 z-20">
          🎯
        </div>
        
        <!-- Floating Text Around Image -->
        <div class="absolute -top-8 left-1/2 transform -translate-x-1/2 text-center opacity-0 group-hover:opacity-100 transition-all duration-500 delay-200">
          <div class="bg-white/90 backdrop-blur-sm rounded-full px-4 py-2 shadow-lg">
            <span class="text-lg font-bold text-gray-800">Quest Master</span>
          </div>
        </div>
        
        <div class="absolute -bottom-12 left-1/2 transform -translate-x-1/2 text-center opacity-0 group-hover:opacity-100 transition-all duration-500 delay-400">
          <div class="bg-gradient-to-r from-blue-500 to-purple-600 text-white rounded-full px-6 py-3 shadow-lg">
            <span class="text-xl font-bold">Pleum</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Floating Particles Background -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <div class="absolute top-1/4 left-1/4 w-2 h-2 bg-yellow-400 rounded-full animate-ping opacity-75"></div>
      <div class="absolute top-1/3 right-1/4 w-1 h-1 bg-blue-400 rounded-full animate-pulse opacity-50"></div>
      <div class="absolute bottom-1/4 left-1/3 w-3 h-3 bg-purple-400 rounded-full animate-bounce opacity-60"></div>
      <div class="absolute bottom-1/3 right-1/3 w-2 h-2 bg-pink-400 rounded-full animate-ping opacity-40 delay-500"></div>
    </div>
    <div class="mt-18">
      <div class="flex justify-between items-center mb-3">
        <h1 class="text-2xl font-semibold text-pink-400 flex items-center">
          <span class="w-1 h-6 bg-pink-600 rounded-full mr-3"></span>
          My Quests
        </h1>
        <%= link_to brag_document_path, 
            class: "inline-flex items-center text-md font-medium text-pink-600 hover:text-pink-800 hover:bg-pink-50 px-3 py-2 rounded-lg transition-all duration-200 group" do %>
          My Brag Document
          <svg class="w-4 h-4 ml-1 group-hover:translate-x-0.5 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        <% end %>
      </div>

      <%= turbo_frame_tag "new_quest" do %>
        <%= render "form", quest: @quest %>
      <% end %>

      <%= turbo_frame_tag "quests" do %>
        <%= render @quests %>
      <% end %>
    </div>
  </div>
</div>

<!-- Enhanced Custom Styles -->
<style>
  /* Custom border widths */
  .border-12 {
    border-width: 12px;
  }
  
  .border-16 {
    border-width: 16px;
  }
  
  /* Enhanced blur effects */
  .blur-2xl {
    filter: blur(40px);
  }
  
  .blur-3xl {
    filter: blur(64px);
  }
  
  /* Enhanced hover effects */
  .group:hover .animate-bounce {
    animation-duration: 0.8s;
  }
  
  .group:hover .animate-pulse {
    animation-duration: 1.5s;
  }
</style>
<div class="w-full max-w-lg mx-auto mt-8">
  <div class="flex justify-between items-center mb-4">
    <h1 class="text-2xl font-bold">Quests</h1>
    <%= link_to "My Brag Document", brag_document_path, class: "text-blue-500 hover:underline" %>
  </div>

  <%= turbo_frame_tag "new_quest" do %>
    <%= render "form", quest: @quest %>
  <% end %>

  <%= turbo_frame_tag "quests" do %>
    <%= render @quests %>
  <% end %>
</div>

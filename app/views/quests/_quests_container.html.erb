<div id="quests-container">
    <% if @quests.any? %>
        <div class="overflow-y-auto md:max-h-[80vh] max-h-[30vh] pr-2">
        <div class="space-y-3">
            <%= turbo_frame_tag "quests" do %>
            <%= render @quests %>
            <% end %>
        </div>
        </div>
    <% else %>
        <div class="flex flex-col items-center justify-center py-12 px-6">
        <h3 class="text-xl font-semibold text-pink-500 mb-2">No quests yet!</h3>
        <p class="text-pink-400 text-center max-w-md leading-relaxed">
            Start your adventure by creating your first quest above ✨
        </p>
        <div class="flex space-x-2 mt-4 opacity-60">
            <span class="text-2xl animate-bounce delay-100">⭐</span>
            <span class="text-2xl animate-bounce delay-300">🌟</span>
            <span class="text-2xl animate-bounce delay-500">💫</span>
        </div>
        </div>
    <% end %>
</div>